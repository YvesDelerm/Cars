<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/car_image"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car_name"
            style="@style/DetailTitleText"
            app:layout_constraintTop_toBottomOf="@+id/car_image" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DetailHighlightText"
            android:id="@+id/daily_price"
            app:layout_constraintTop_toTopOf="@+id/car_name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="@+id/car_name"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="5"
            android:stepSize="0.1"
            android:numStars="5"
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/car_rating_bar" app:layout_constraintTop_toBottomOf="@+id/car_name"
            app:layout_constraintStart_toStartOf="parent" android:scaleX="1.50"
            android:scaleY="1.50"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DetailColoredText"
            android:layout_marginTop="16dp"
            android:id="@+id/car_rating_count" app:layout_constraintStart_toEndOf="@+id/car_rating_bar"
            android:layout_marginStart="24dp" app:layout_constraintTop_toBottomOf="@+id/car_name"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/car_rating_bar"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner"
            style="@style/DetailText"
            android:text="@string/owner"
            app:layout_constraintTop_toBottomOf="@+id/car_rating_bar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="128dp"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/owner_image"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/owner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DetailText"
            android:id="@+id/owner_name" app:layout_constraintStart_toEndOf="@+id/owner_image"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/owner_image"
            app:layout_constraintBottom_toBottomOf="@+id/owner_image"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:max="5"
            android:stepSize="0.1"
            android:numStars="5"
            android:id="@+id/owner_rating_bar"
            app:layout_constraintStart_toStartOf="@+id/owner_name"
            app:layout_constraintTop_toBottomOf="@+id/owner_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>